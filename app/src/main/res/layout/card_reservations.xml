<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    android:background="@drawable/raduis_grey"
    tools:context=".ReservationsActivity">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/btncall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:contextClickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/call"

                />


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/url_image_item"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/housecard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abdellah amraoui"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0682086521"
                android:layout_marginStart="8dp"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abdellahamraoui@gmail.com"
                android:layout_marginBottom="16dp"

                android:layout_marginStart="8dp"
                android:textSize="16sp"

                />
            <TextView
                android:id="@+id/titel_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room calm"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/location_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morocco BÃ©ni Mellal"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textStyle="bold"

                />










        </LinearLayout>








    </LinearLayout>


</androidx.cardview.widget.CardView>
